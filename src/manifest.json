{
  "manifest_version": 2,

  "name": "Youtube soundtrack downloader",
  "description": "This extension allows you to download youtube videos soundtracks",
  "version": "1.0",

  "browser_action": {
   "default_icon": "19x19_default.png"
  },
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"]
    }
  ],
  "permissions": [
    "tabs",
    "background",
    "storage"
   ]
}