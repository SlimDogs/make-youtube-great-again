{
  "manifest_version": 2,

  "name": "Youtube soundtrack downloader",
  "description": "This extension allows you to download youtube videos songs",
  "version": "1.0",
  "author": "Tautvydas Derzinskas",
	"homepage_url": "https://github.com/SlimDogs/youtube-sound-track-download-extension",

	"options_page": "configuration.html",

  "browser_action": {
    "default_icon": {
      "19": "icons/icon_19x19.png",
      "38": "icons/icon_38x38.png"
    },
   "default_popup": "popup.html"
	},

	"icons": {
		"16": "icons/icon_16x16.png",
		"48": "icons/icon_48x48.png",
		"128": "icons/icon_128x128.png"
	},

  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": false
  },

  "content_scripts": [
		{
			"matches": ["*://*.youtube.com/*"],
			"css": [],
			"js": ["content.bundle.js"],
			"run_at": "document_end",
			"all_frames": true
    },
		{
			"matches": ["*://*.flvto.biz/*"],
			"include_globs" :   ["*#*"],
			"js": ["flvto.bundle.js"],
			"run_at": "document_end",
			"all_frames": true
    },
		{
			"matches": ["*://*.onlinevideoconverter.com/youtube-converter*"],
			"include_globs" :   ["*#*"],
			"js": ["onlinevideoconverter.bundle.js"],
			"run_at": "document_end",
			"all_frames": true
    },
		{
			"matches": ["*://*.savemp3.net/frame/button/?quality=*&video=*"],
			"include_globs" :   ["*#*"],
			"js": ["savemp3.bundle.js"],
			"run_at": "document_end",
			"all_frames": true
		}
  ],

  "permissions": [
    "tabs",
    "storage"
   ]
}