{
  "manifest_version": 2,

  "name": "Youtube soundtrack downloader",
  "description": "This extension allows you to download youtube videos soundtracks",
  "version": "1.0",
  "author": "Tautvydas Derzinskas",
  "homepage_url": "https://github.com/SlimDogs/youtube-sound-track-download-extension",

  "browser_action": {
   "default_icon": "19x19_default.png",
   "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": false
  },

  "content_scripts": [
		{
			"matches": [
				"*://*.youtube.com/*"
			],
			"css": [],
			"js": [
				"content.bundle.js"
			],
			"run_at": "document_start",
			"all_frames": true
		}
  ],

  "permissions": [
    "tabs",
    "storage"
   ]
}